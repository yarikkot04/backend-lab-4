<h1>Add record</h1>

<form action="/record" method="POST">
    <div class="input-field">
        <input id="user_id" name="user_id" type="text" class="validate" required>
        <label for="user_id">Enter user id</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>

    <div class="input-field">
        <input id="category_id" name="category_id" type="text" class="validate" required>
        <label for="category_id">Enter category id</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field">
        <input id="amount" name="amount" type="text" class="validate" step="0.01" pattern="\d+(\.\d{1,2})?" required>
        <label for="amount">Enter amount of expense</label>
        <span class="helper-text" data-error="Enter amount"></span>
    </div>
    <label>Currency</label>
    <div class="input-field">
        <select class="browser-default" name="currency">
            <option value="" disabled selected>Choose currency (Optional) </option>
            <option value="UAH">UAH - Ukrainian hryvnia</option>
            <option value="USD">USD - U.S. dollar</option>
            <option value="EUR">EUR - Euro</option>
            <option value="GBP">GBP - British pound</option>
            <option value="JPY">JPY - Japanese yen</option>
            <option value="CAD">CAD - Canadian dollar</option>
        </select>
    </div>
    <input type="hidden" name="_csrf" value="{{@root.csrf}}">
    <button class="btn btn-primary">Create record</button>
</form>
